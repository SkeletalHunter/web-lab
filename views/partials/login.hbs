{{#unless signed_in}}
<div class="login-wrapper">
    <form id="login" action="/auth/login" method="post">
        <label for="email">
            <input placeholder="Email" type="text" id="email" name="email">
        </label>
        <label for="password">
            <input placeholder="Пароль" type="text" id="password" name="password">
        </label>
        <input type="submit" value="Войти">
    </form>
</div>
<!-- Registration form -->
<div class="login-wrapper">
  <form id="login" action="/auth/register" method="post">
    <label for="email">
      <input placeholder="Email" type="text" id="email" name="email">
    </label>
    <label for="password">
      <input placeholder="Пароль" type="text" id="password" name="password">
    </label>
    <input type="submit" value="Регистрация">
  </form>
</div>
{{else}}
<div class="login-wrapper">
    Здравствуй, user!
    <form id="logout" action="/logout" method="post">
        <button type='submit' name='parameter'>Выйти</button>
    </form>
</div>
{{/unless}}